    "version": "0.2.0",
    "configurations": [

        
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        },
        

        {
            "type": "firefox",
            "request": "launch",
            "name": "Firefox",
            "url": "https://localhost:4200",
            "webRoot": "${workspaceFolder}"
        },
    ]
}